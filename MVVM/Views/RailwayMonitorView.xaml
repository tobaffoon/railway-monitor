<UserControl x:Class="railway_monitor.MVVM.Views.RailwayMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:railway_monitor.MVVM.Views"
             xmlns:viewModels="clr-namespace:railway_monitor.MVVM.ViewModels"
             xmlns:toolbuttons="clr-namespace:railway_monitor.Components.ToolButtons"
             xmlns:rw_canvas="clr-namespace:railway_monitor.Components.RailwayCanvas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border x:Name="MainBorder"
            Background="Azure"
            BorderBrush="Black" 
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <rw_canvas:RailwayCanvas x:Name="MainCanvas" Background="Azure" Grid.Row="0">
                <Canvas.DataContext>
                    <viewModels:RailwayMonitorViewModel/>
                </Canvas.DataContext>

                <Canvas.InputBindings>
                    <MouseBinding Command="{Binding Source={StaticResource SharedToolButtonsViewModel}, Path=ClickCommand}"
                                  CommandParameter="{Binding ElementName=MainCanvas}"
                                  MouseAction="LeftClick"></MouseBinding>
                </Canvas.InputBindings>
            </rw_canvas:RailwayCanvas>

            <toolbuttons:ToolButtons Grid.Row="1">
                <toolbuttons:ToolButtons.HorizontalAlignment>
                    Center
                </toolbuttons:ToolButtons.HorizontalAlignment>
                <toolbuttons:ToolButtons.VerticalAlignment>
                    Bottom
                </toolbuttons:ToolButtons.VerticalAlignment>
            </toolbuttons:ToolButtons>

</Grid>
    </Border>
        
</UserControl>
